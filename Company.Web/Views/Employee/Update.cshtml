@model EmployeeDTO



<h1>Create New Employee</h1>

<form asp-action="Update">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adress" class="col-form-label"></label>
        <input asp-for="Adress" class="form-control" />
        <span asp-validation-for="Adress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="salary" class="col-form-label"></label>
        <input asp-for="salary" class="form-control" type="number" />
        <span asp-validation-for="salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhineNumber" class="col-form-label"></label>
        <input asp-for="PhineNumber" class="form-control" />
        <span asp-validation-for="PhineNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HiringDate" class="col-form-label"></label>
        <input asp-for="HiringDate" class="form-control" type="date" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="Department" class="control-label"></label>
        @Html.DropDownList("DepartmentId", ViewBag.Departments as SelectList, "Select Department", new { @class = "form-control" })
    </div>


    <div class="form-group m-2">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
