@model IEnumerable<Employee>

<a class="btn btn-info m-2" asp-controller="Employee" asp-action="Create">Create</a>


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.Age)</th>
                <th>@Html.DisplayNameFor(d => d.salary)</th>
                <th>@Html.DisplayNameFor(d => d.Email)</th>
                <th>@Html.DisplayNameFor(d => d.Department.Name)</th>
                <th>@Html.DisplayNameFor(d => d.HiringDate)</th>
                <th></th>
                <th></th>
                <th></th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.salary</td>
                    <td>@item.Email</td>
                    <td>@item.Department.Name</td>
                    <td>@item.HiringDate</td>
                    <td>
                        <a class="btn btn-info" asp-area="" asp-controller="Employee" asp-action="Detalis" asp-route-Id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-light" asp-area="" asp-controller="Employee" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-area="" asp-controller="Employee" asp-action="Delete" asp-route-Id="@item.Id">Dlete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert-danger mt-5 alert">
        <h3>No emmployees</h3>
    </div>
}