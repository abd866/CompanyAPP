@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AutLayoutcshtml.cshtml";
}

<h1>ResetPassword</h1>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Email"/>
    <input type="hidden" asp-for="Token"/>

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="password" asp-for="Password" placeholder="password" required class="form-control" />
    <span asp-validation-for="Password"></span>
    <br />

    <input type="password" asp-for="ConfirmPasword" placeholder="ConfirmPasword" required class="form-control" />
    <span asp-validation-for="ConfirmPasword"></span>
    <br />
    <input type="submit" value="Login" class="btn btn-primary" />
</form>