@model IEnumerable<DepartmentDTO>

<a class="btn btn-info m-2"  asp-controller="Department" asp-action="Create">Create</a>


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped"> 
        <thead>
           <tr>
            <th>@Html.DisplayNameFor(d=>d.Name)</th>
           <th>@Html.DisplayNameFor(d => d.code)</th>
           <th>@Html.DisplayNameFor(d => d.CreateAT)</th>
           <th></th>
           <th></th>
            <th></th>


        </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
           <tr>
            <td>@item.Name</td>
            <td>@item.code</td>
            <td>@item.CreateAT</td>
            <partial name="_ActionButtons" model="@item.Id.ToString()" />

           </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert-danger mt-5 alert">
        <h3>No Department</h3>
    </div>
}