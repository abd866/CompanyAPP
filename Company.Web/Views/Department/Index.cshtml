@model IEnumerable<Department>

<a class="btn btn-info m-2"  asp-controller="Department" asp-action="Create">Create</a>


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped"> 
        <thead>
           <tr>
            <th>@Html.DisplayNameFor(d=>d.Name)</th>
           <th>@Html.DisplayNameFor(d => d.code)</th>
           <th>@Html.DisplayNameFor(d => d.CreatedAT)</th>
           <th></th>
           <th></th>
            <th></th>


        </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
           <tr>
            <td>@item.Name</td>
            <td>@item.code</td>
            <td>@item.CreatedAT</td>
                    <td>
                        <a class="btn btn-info" asp-area="" asp-controller="Department" asp-action="Detalis" asp-route-Id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-light" asp-area="" asp-controller="Department" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                    </td>
            <td>
                        <a class="btn btn-warning" asp-area="" asp-controller="Department" asp-action="Delete" asp-route-Id="@item.Id">Dlete</a>

            </td>
           </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert-danger mt-5 alert">
        <h3>No Department</h3>
    </div>
}