@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Detalis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IdentityRole
<h1 class="p-2">Update role</h1>

<form asp-action="Update">

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" type="text" />
    </div>
    <div class="form-group m-2">
        <a class="btn btn-light" asp-controller="Role" asp-action="AddOrRemoveUser" asp-route-RoleId="@Model.Id">Add or remove User</a>

    </div>
    <div class="form-group m-2">
        <button type="submit" class="btn btn-primary">Update</button>
        <a class="btn btn-light" asp-controller="Role" asp-action="Index">Back To List</a>

    </div>
</form>