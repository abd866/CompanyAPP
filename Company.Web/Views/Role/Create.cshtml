@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IdentityRole
<h1 class="p-2">Create New Department</h1>

<form asp-action="Create">
    
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" type="text" />
    </div>
    <div class="form-group m-2">
        <button type="submit" class="btn btn-primary">Create</button>
        <a class="btn btn-light" asp-controller="Role" asp-action="Index">Back To List</a>

    </div>
</form>
