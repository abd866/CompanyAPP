@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<IdentityRole>

<a class="btn btn-info m-2" asp-controller="Role" asp-action="Create">Create</a>


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Id)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>

               
               
                <th></th>
                <th></th>
                <th></th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                
                   <td>
                      <partial name="_ActionButtons" model="@item.Id.ToString()" />

                   </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert-danger mt-5 alert">
        <h3>No role</h3>
    </div>
}

